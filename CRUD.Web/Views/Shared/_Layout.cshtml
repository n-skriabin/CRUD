<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")

</head>
<body>   
    <div class="row">
        <div id="megaStore">
            <p></p>
            <ul id="menu">
                <li>
                    @Html.ActionLink("Authors", "Index", "Authors", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li>
                    @Html.ActionLink("Books", "Index", "Books", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li>
                    @Html.ActionLink("Articles", "Index", "Articles", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li>
                    @Html.ActionLink("Journals", "Index", "Journals", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li>
                    @Html.ActionLink("Publishers", "Index", "Publishers", new { area = "" }, new { @class = "navbar-brand" })
                </li>
            </ul>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#menu").kendoMenu();
        });
    </script>

        <div class="container body-content">

            @RenderBody()

            <hr />          
        </div>

        @RenderSection("scripts", required: false)
</body>
</html>